---
import Layout from '../layouts/Layout.astro';
const products = [
    {
        title: "Product One",
        description:
            "A short description of the product goes here. Keep it clean and concise just like Failory.",
        image: "/images/product1.jpg",
        link: "#"
    },
    {
        title: "Product Two",
        description:
            "Another product with its own small description for quick scanning.",
        image: "/images/product2.jpg",
        link: "#"
    }
];
---
<Layout>

    <section class="max-w-7xl mx-auto py-12">

        <h1 class="text-6xl font-extrabold mb-10">
            Products
        </h1>
        <p class="text-3xl text-gray-600">
            One online course, one eBook, one tool and one sheet that we've created to help you take your startup to the next level.
        </p>
        <div class="py-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-1">
            <h1 class="text-6xl font-extrabold">
                Education
            </h1>
            {products.map((product) => (
                    <div class="bg-gray-100 rounded-md p-6 flex flex-col md:flex-row gap-6">
                        <!-- Left image -->
                        <div class="flex-shrink-0 md:w-1/3">
                            <img
                                    src={product.image}
                                    alt={product.title}
                                    class="w-full h-auto rounded-md object-cover"
                            />
                        </div>

                        <!-- Right content -->
                        <div class="flex flex-col justify-center md:w-2/3">
                              <span class="self-start inline-block bg-gray-200 text-gray-600 text-xl px-3 py-1 rounded mb-3">
                                {product.tag || "Online Course"}
                              </span>
                            <h3 class="text-4xl font-bold text-gray-900 mb-3">
                                {product.title}
                            </h3>
                            <p class="text-gray-600 text-2xl mb-6">
                                {product.description}
                            </p>
                            <a
                                    href={product.link}
                                    class="self-start inline-block bg-black text-white text-2xl font-semibold px-5 py-3 rounded transition"
                            >
                                {product.cta || `Get ${product.title} for $${product.price}`}
                            </a>
                        </div>
                    </div>
            ))}
        </div>

        <div class="py-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-1">
            <h1 class="text-6xl font-extrabold">
                Data
            </h1>
            {products.map((product) => (
                    <div class="bg-gray-100 rounded-md p-6 flex flex-col md:flex-row gap-6">
                        <!-- Left image -->
                        <div class="flex-shrink-0 md:w-1/3">
                            <img
                                    src={product.image}
                                    alt={product.title}
                                    class="w-full h-auto rounded-md object-cover"
                            />
                        </div>

                        <!-- Right content -->
                        <div class="flex flex-col justify-center md:w-2/3">
                              <span class="self-start inline-block bg-gray-200 text-gray-600 text-xl px-3 py-1 rounded mb-3">
                                {product.tag || "Online Course"}
                              </span>
                            <h3 class="text-4xl font-bold text-gray-900 mb-3">
                                {product.title}
                            </h3>
                            <p class="text-gray-600 text-2xl mb-6">
                                {product.description}
                            </p>
                            <a
                                    href={product.link}
                                    class="self-start inline-block bg-black text-white text-2xl font-semibold px-5 py-3 rounded transition"
                            >
                                {product.cta || `Get ${product.title} for $${product.price}`}
                            </a>
                        </div>
                    </div>
            ))}

        </div>
    </section>

</Layout>