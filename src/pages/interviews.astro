---
import Layout from '../layouts/Layout.astro';
import InterviewList from '../components/InterviewList.vue';
import { createClient } from '@supabase/supabase-js';

// Supabase client init
const supabase = createClient(
    import.meta.env.PUBLIC_SUPABASE_URL,
    import.meta.env.PUBLIC_SUPABASE_ANON_KEY
);

// Fetch posts table data
const { data: posts, error } = await supabase
    .from('posts')
    .select('*')
    .order('date', { ascending: false });

if (error) {
    console.error("Error fetching posts:", error);
}
---

<Layout>
    <section class="max-w-7xl mx-auto flex flex-col md:flex-row items-center gap-8 my-16">
        <!-- Left Content -->
        <div class="flex-1">
            <h2 class="text-3xl md:text-4xl lg:text-6xl font-extrabold mb-4">Interviews</h2>
            <p class="text-3xl text-gray-600">
                +200 interviews with the brains behind failed and successful startups.
                Learn from their wins and their mistakes and become a better founder.
            </p>
        </div>

        <!-- Right Newsletter Box -->
        <div class="flex-1 border border-gray-300 p-8 rounded-sm space-y-6">
            <h3 class="text-3xl font-bold">
                The <a href="#" class="underline font-bold">All-In-One</a> Newsletter for Startup Founders
            </h3>
            <p class="mt-2 text-gray-700 text-xl">
                90% of startups fail. Learn how to not to with our weekly guides and stories.
                <strong>Join 40,000+ founders.</strong>
            </p>
            <form class="mt-4 space-y-3">
                <input
                        type="email"
                        placeholder="Enter your email"
                        class="w-full px-3 py-4 text-xl border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-black"
                />
                <button
                        type="submit"
                        class="w-full bg-black text-white font-semibold py-4 rounded-md hover:bg-gray-900 transition text-xl font-bold"
                >
                    Subscribe For Free â†’
                </button>
            </form>
        </div>
    </section>

    <!-- Pass posts data to Vue component -->
    <InterviewList client:load interviews={JSON.stringify(posts || [])} />
</Layout>
