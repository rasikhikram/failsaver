---
import Layout from '../layouts/Layout.astro';

const interviews = [
    {
        status: "success",
        title: "Founder's Insights on Scaling a B2B API Fintech Product",
        tags: ["Finances", "Germany", "No Data"],
        author: "Andrey Korchak",
        date: "December 7, 2023",
        avatar: "https://via.placeholder.com/40"
    },
    {
        status: "success",
        title: "Founder's Journey to Revolutionize the Travel Industry",
        tags: ["Travel", "United States"],
        author: "Ivan Saprov",
        date: "November 17, 2023",
        avatar: "https://via.placeholder.com/40"
    },
    {
        status: "failed",
        title: "How Crypto Hype Misled A Startup From Solving Real Problems",
        tags: ["Finances", "Spain", "No Market Need", "$0-$10k/mo"],
        author: "David Pérez",
        date: "November 17, 2025",
        avatar: "https://via.placeholder.com/40"
    },
    {
        status: "success",
        title: "Founder's Journey to Revolutionize the Travel Industry",
        tags: ["Travel", "United States"],
        author: "Ivan Saprov",
        date: "November 17, 2023",
        avatar: "https://via.placeholder.com/40"
    },
    {
        status: "failed",
        title: "Founder's Journey to Revolutionize the Travel Industry",
        tags: ["Travel", "United States"],
        author: "Ivan Saprov",
        date: "November 17, 2023",
        avatar: "https://via.placeholder.com/40"
    },
    {
        status: "success",
        title: "Founder's Journey to Revolutionize the Travel Industry",
        tags: ["Travel", "United States"],
        author: "Ivan Saprov",
        date: "November 17, 2023",
        avatar: "https://via.placeholder.com/40"
    },
    {
        status: "failed",
        title: "Founder's Journey to Revolutionize the Travel Industry",
        tags: ["Travel", "United States"],
        author: "Ivan Saprov",
        date: "November 17, 2023",
        avatar: "https://via.placeholder.com/40"
    },

];

const getStatusIcon = (status) => {
    return status === "success" ? "✅" : "❌";
};
---

<Layout>
    <section class="max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-between gap-8 md:gap-16 my-16">
        <!-- Left Content -->
        <div class="flex-1">
            <h2 class="text-3xl md:text-4xl lg:text-6xl font-extrabold mb-4">Interviews</h2>
            <p class="text-3xl text-gray-600">
                +200 interviews with the brains behind failed and successful startups.
                Learn from their wins and their mistakes and become a better founder.
            </p>
        </div>

        <!-- Right Newsletter Box -->
        <div class="flex-1 border border-gray-300 p-8 rounded-sm space-y-6">
            <h3 class="text-3xl font-bold">
                The <a href="#" class="underline font-bold">All-In-One</a> Newsletter for Startup Founders
            </h3>
            <p class="mt-2 text-gray-700 text-xl">
                90% of startups fail. Learn how to not to with our weekly guides and stories.
                <strong>Join 40,000+ founders.</strong>
            </p>
            <form class="mt-4 space-y-3">
                <input
                        type="email"
                        placeholder="Enter your email"
                        class="w-full px-3 py-4 text-xl border border-gray-400 rounded-md focus:outline-none focus:ring-2 focus:ring-black"
                />
                <button
                        type="submit"
                        class="w-full bg-black text-white font-semibold py-4 rounded-md hover:bg-gray-900 transition text-xl font-bold"
                >
                    Subscribe For Free →
                </button>
            </form>
        </div>
    </section>

    <div class="max-w-7xl mx-auto flex gap-6 p-6 font-sans">
        <!-- Left Sidebar -->
        <div class="w-72 flex flex-col gap-4">
            <button class="border-3 border-black rounded-lg px-4 py-3 font-bold text-xl">
                All Interviews
            </button>
            <button class="border-3 border-green-500 bg-green-100 text-black rounded-lg px-4 py-3 font-bold text-xl">
                Successful startup
            </button>
            <button class="border-3 border-red-500 bg-red-100 text-black rounded-lg px-4 py-3 font-bold text-xl">
                Failed startup
            </button>
            <hr class="my-2" />
            <input
                    type="text"
                    placeholder="Search"
                    class="border-3 border-gray-300 rounded-lg px-4 py-3 text-xl"
            />
            <select class="border-3 border-gray-300 rounded-lg px-4 py-3 text-xl font-bold">
                <option>Category</option>
            </select>
            <select class="border-3 border-gray-300 rounded-lg px-4 py-3 text-xl font-bold">
                <option>Country</option>
            </select>
            <select class="border-3 border-gray-300 rounded-lg px-4 py-3 text-xl font-bold">
                <option>Revenue (✓)</option>
            </select>
            <select class="border-3 border-gray-300 rounded-lg px-4 py-3 text-xl font-bold">
                <option>Cause of Failure (x)</option>
            </select>
        </div>

        <!-- Right Content -->
        <div class="flex flex-col gap-4 flex-1">
            {interviews.map((item, index) => (
                    <div
                            key={index}
                            class="border-3 border-black rounded-lg p-4 flex flex-col gap-3"
                    >
                        <h2 class="font-bold text-2xl">{item.title}</h2>
                        <div class="flex gap-2 flex-wrap">
                            <span class="mt-1 w-8 h-8">{getStatusIcon(item.status)}</span>
                            {item.tags.map((tag) => (
                                    <span class="bg-gray-200 px-5 py-1 rounded-full text-lg">
              {tag}
            </span>
                            ))}
                        </div>
                        <div class="flex items-center gap-3 mt-2">
                            <img
                                    src={item.avatar}
                                    alt="avatar"
                                    class="w-10 h-10 rounded-full"
                            />
                            <div>
                                <p class="font-bold text-2xl">{item.author}</p>
                                <p class="text-lg text-gray-500">{item.date}</p>
                            </div>
                        </div>
                    </div>
            ))}
        </div>
    </div>

</Layout>