---
import HeaderLink from './HeaderLink.astro';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-gray-200">
	<div class="max-w-7xl mx-auto sm:px-6 lg:px-8 py-5 flex justify-between items-center">
		<a href="/" class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-black">
			Fail Saver
		</a>

		<!-- Desktop Navigation -->
		<nav class="hidden md:flex space-x-4 sm:space-x-6 lg:space-x-10 items-center font-bold text-sm sm:text-lg lg:text-2xl">
			<HeaderLink href="/interviews">Interviews</HeaderLink>
			<HeaderLink href="/blogs">Blog</HeaderLink>
			<HeaderLink href="/graveyard">Graveyard</HeaderLink>
			<HeaderLink href="/products">Products</HeaderLink>
			<a href="#" class="bg-black text-white px-4 py-2 lg:px-4 lg:py-3 rounded-md text-sm sm:text-base lg:text-xl hover:bg-zinc-800 transition">
				Subscribe →
			</a>
		</nav>

		<!-- Mobile Menu Button (Optional) -->
		<div class="md:hidden">
			<!-- Add mobile menu icon / dropdown later if needed -->
			<button class="text-black focus:outline-none">☰</button>
		</div>
	</div>
</header>
