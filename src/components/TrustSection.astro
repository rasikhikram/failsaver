---

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
    <h1 class="flex flex-col sm:flex-row items-center justify-center text-center leading-tight px-4 text-[36px] sm:text-4xl lg:text-6xl font-extrabold mb-10">
        Trusted by +40K Founders
    </h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {tweets.map(tweet => (
                <div class="bg-white border border-gray-200 rounded-xl p-4 flex flex-col shadow-sm hover:shadow-md transition">
                    <!-- Top: Name + Username -->
                    <div class="flex items-center gap-2 mb-2">
                        <Image src={Profile} alt="Pro" class="w-14 h-14 rounded-full" />
                        <div>
                            <p class="font-bold text-2xl text-gray-900">{tweet.name}</p>
                            <p class="text-gray-500 text-lg">{tweet.username}</p>
                        </div>
                    </div>

                    <!-- Tweet Text -->
                    <p class="text-gray-800 text-xl whitespace-pre-line mb-3">{tweet.text}</p>

                    <!-- Optional Image -->
                    {tweet.img && (
                            <img src={tweet.img} alt="" class="rounded-lg border border-gray-100 mb-3" />
                    )}

                    <!-- Footer -->
                    <p class="text-gray-500 text-lg">{tweet.date}</p>
                </div>
        ))}
    </div>
</section>
